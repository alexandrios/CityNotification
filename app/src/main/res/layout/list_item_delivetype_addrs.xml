<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/vClickableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dtsImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_email"
            app:tint="@color/text" />

        <TextView
            android:id="@+id/dtsNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:minLines="2"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:textSize="@dimen/delivery_type_dialog_item_text_size" />

        <TextView
            android:id="@+id/dtsIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textColor="@color/text"
            android:textSize="@dimen/delivery_type_dialog_item_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dtsShortTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="short"
            android:textColor="@color/text"
            android:textSize="@dimen/delivery_type_dialog_item_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dtsValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="value"
            android:textColor="@color/text"
            android:textSize="@dimen/delivery_type_dialog_item_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dtsHasSendPeriodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="has_send_period"
            android:textColor="@color/text"
            android:textSize="@dimen/delivery_type_dialog_item_text_size"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>